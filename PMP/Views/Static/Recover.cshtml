<div class="container" custom-login-image-height Id="login-page">
    <div class="row">
        <div class="col-xs-12">
            <div id="login-box">
                <div id="login-box-holder">
                    <div class="row">
                        <div class="col-xs-12">
                            <header id="login-header">
                                <div id="login-logo">
                                    <img alt="" src="/Content/img/logo.png">
                                </div>
                            </header>                            
                            <div id="login-box-inner">
                                <div class="alert alert-info" ng-show="done">
                                    <span style="font-size:12px; font-weight:700;">{{message}}</span>
                                    <a style="font-family:Tahoma; font-size:11px; color:red;" ui-sref="Login">Return To Login</a>
                                </div>
                                <div class="alert alert-danger" ng-if="Error && !done">
                                    <span style="font-size:12px; font-weight:700;">{{Error.Message}}</span>
                                </div>
                                <form name="Recover" ng-submit="RecoverPassword()" ng-show="!done">
                                    <div class="input-group tooltip-f">
                                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                        <input type="text" id="UserName" name="UserName" placeholder="User name" ng-model="RecoverModel.Email" class="form-control" required>
                                        <span class="tooltiptext" ng-show="Recover.UserName.$dirty && Recover.UserName.$error.required">This Field Is Required</span>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-12">
                                            <button class="btn btn-primary  col-xs-12" type="submit" ng-disabled="Recover.$invalid" value="submit">Submit</button>
                                        </div>
                                    </div>                                   
                                 </form>
                             </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


