<div class="container" custom-login-image-height Id="login-page">
    <div class="row">
        <div class="col-xs-12">
            <div id="login-box">
                <div id="login-box-holder">
                    <div class="row">
                        <div class="col-xs-12">
                            <header id="login-header">
                                <div id="login-logo">
                                    <img alt="" src="/Content/img/logo.png">
                                </div>
                            </header>
                            <div id="login-box-inner">
                                <div class="alert alert-info" ng-show="done">
                                    <span style="font-size:12px; font-weight:700;">{{message}}</span> <br />
                                    <a style="font-family:Tahoma; font-size:11px; color:red;" ui-sref="Login">Return To Login</a>
                                </div>
                                <div class="alert alert-danger" ng-if="Error && !done">
                                    <span style="font-size:12px; font-weight:700;">{{Error.Message}}</span>
                                </div>
                                <form name="ResetPassword" ng-submit="SubmitNewPassword()" ng-show="!done">
                                    
                                    <div class="input-group tooltip-f">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        <input ng-readonly="ReadOnly" type="password" id="NewPassword" name="NewPassword" placeholder="Enter password" class="form-control" ng-model="ResetPasswordModel.Password" required>
                                        <span class="tooltiptext" id="help" data-toggle="tooltip" ng-show="ResetPassword.NewPassword.$dirty && ResetPassword.NewPassword.$error.required">This field is required.</span>
                                    </div>

                                    <div class="input-group tooltip-f">
                                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                        <input ng-readonly="ReadOnly" type="password" id='ConfirmPassword' name='ConfirmPassword' placeholder="Confirm Password" ng-model="ResetPasswordModel.ConfirmPassword" class="form-control" required>
                                        <span class="tooltiptext" id="help" data-toggle="tooltip" ng-show="ResetPassword.ConfirmPassword.$dirty && ResetPasswordModel.Password!==ResetPasswordModel.ConfirmPassword">Passwords doesn't match.</span>
                                    </div>

                                    <div class="row">
                                        <div class="col-xs-12">
                                            <button class="btn btn-primary  col-xs-12" type="submit" ng-disabled="ResetPassword.$invalid" value="submit">Submit</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
